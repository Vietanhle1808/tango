include ./_card-image.pug

//----------------------------------------------------------------
  Card2 Location
  - image: link to image
  - title: Card's title
  - description: Card's description
  - cta1, cta2: Name of CTA
  - src1, src2: Link of cta
  ----------------------------------------------------------------

mixin card2-location(image, title, description, phone1, phone2, email)
  article.card2.card2-location.no-footer&attributes(attributes)
    if image
      .card2-header
        a(href="where-to-buy-map-office.html")
          +card-image(image)
    .card2-body
      a.card2-title(href="where-to-buy-map-office.html") #{title}
      p.card2-description !{description}
    .card2-footer
      p 
        | P: 
        a.link.reverse.dark(href="tel:" + phone1) #{phone1}
      p 
        | P: 
        a.link.reverse.dark(href="tel:" + phone2) #{phone2}
      p 
        | E: 
        a.link.reverse.dark(href="mailto:" + email) #{email}

//-
  - title
  - address
