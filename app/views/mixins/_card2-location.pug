  - like: true/false. Default true

mixin card2-location-2(title, address, distance, like, id)
  - like = like || true
  article.card2.card2-location-2.no-footer.button-change-location&attributes(attributes)
    if title
      a.card2-title(href="#" title=title) #{title}
    if address
      p.card2-helper= address
      p.card2-helper= distance
